{
    "tts_runner_location": "{HOME}\\tts-runner",
    "directories": [
        "{HOME}\\audio"
    ],
    "prompts_directory": "prompts",
    "tongue_twisters_dir": "",
    "artists_file": "artists_example.json",
    "composers_file": "composers_example.json",
    "foreground_color": "white",
    "background_color": "#2596BE",
    "open_weather_api_key": "<KEY>",
    "news_api_key": "<KEY>",
    "news_api_source_trustworthiness": {
        "bbc-news": 0.5
    },
    "holiday_api_key": "<KEY>",
    "coqui_tts_location": "{HOME}\\TTS-dev",
    "text_cleaner_ruleset": [
        {
            "pattern": "BWV\\.?([ -])?",
            "replacement": "Bach-Werke-Verzeichnis ",
            "simple_replacement": false
        },
        {
            "pattern": " KV?\\. ?([0-9])",
            "replacement": " KÃ¶chel \\1",
            "simple_replacement": false
        },
        {
            "pattern": " Vol\\.? ?([0-9IVXLM])",
            "replacement": " Volume \\1",
            "simple_replacement": false
        }
    ],
    "coqui_tts_model": ["tts_models/multilingual/multi-dataset/xtts_v2", "Royston Min", "en"],
    "max_chunk_tokens": 200
}
